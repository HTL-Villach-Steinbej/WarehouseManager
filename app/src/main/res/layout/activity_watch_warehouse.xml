<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="900dp"
                android:layout_height="900dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                app:columnCount="10"
                app:rowCount="10">

                <Button
                    android:id="@+id/btnRegal1"
                    android:width="900dp"
                    android:text="Regal 1"
                    app:layout_columnSpan="10"
                    app:layout_gravity="fill"
                    app:layout_rowSpan="1" />

                <Button
                    android:id="@+id/btnRegal2"
                    android:text="Regal 2"
                    app:layout_columnSpan="10"
                    app:layout_gravity="fill"
                    app:layout_rowSpan="1" />

                <Button
                    android:id="@+id/btnRegal3"
                    android:text="Regal 3"
                    app:layout_columnSpan="10"
                    app:layout_gravity="fill"
                    app:layout_rowSpan="1" />

                <Button
                    android:id="@+id/btnRegal4"
                    android:text="Regal 4"
                    app:layout_columnSpan="10"
                    app:layout_gravity="fill"
                    app:layout_rowSpan="1" />

                <Button
                    android:id="@+id/btnRegal5"
                    android:text="Regal 5"
                    app:layout_columnSpan="5"
                    app:layout_gravity="left"
                    app:layout_rowSpan="1" />

                <Button
                    android:id="@+id/btnRegal6"
                    android:text="Regal 6"
                    app:layout_columnSpan="5"
                    app:layout_gravity="center|end"
                    app:layout_rowSpan="1" />
            </androidx.gridlayout.widget.GridLayout>
        </HorizontalScrollView>
    </ScrollView>

    <TextView
        android:id="@+id/txtAddComponents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/addComonents"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012"
        style="@style/TextAppearance.MaterialComponents.Overline"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="395dp"
        android:layout_height="79dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168">

        <Button
            android:id="@+id/btnAddRegal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Add a big kastale"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.088" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>